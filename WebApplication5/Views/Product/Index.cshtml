@model IEnumerable<Product>

<a class=" btn btn-secondary btn-lg " asp-action="Create">
	<i class="bi bi-plus-circle-dotted">
		AddProduct
	</i>
</a>
<link href="~/css/indexaddproduct.css" rel="stylesheet" />
@if (!Model.Any())
{
	<div class="alert  alert-warning mt-5">

		<h4 class="alert-heading">No Product Added!</h4>
		<p class="mb-0">no product added yet.</p>
	</div>
}
else
{
	<style>

	</style>
	<div class=" mt-5">
		<table class="table table-bordered border-primary">
		<tbody>
		 @foreach(var pro in Model)
		 {
			<tr class="border-1 border-success">
				<td>
					<div class="d-flex">
						<div>
									<img src="@($"/asset/images/{pro.Cover}")" alt="@pro.ProductName" style="max-width:90px"/>
						</div>
						<div class="d-flex flex-column  justify-content-center">
							<h4 class="text-dark">@pro.ProductName</h4>
							<h5>@pro.Brand.Name</h5>
						</div>
					</div>
				</td>
				<td class="align-middle" >
					<div class="d-flex justify-content-end">
						<a  class="btn btn-info rounded rounded-3 me-2" asp-action="Update" asp-route-id="@pro.Id">
							<i class=" bi  bi-pencil-fill"></i>
						</a>
						<a href ="#" class="btn btn-info rounded rounded-3 ">
							<i class=" bi bi-trash3"></i>
						</a>
					</div>
				</td>
			</tr>
		 }
		</tbody>
		</table>
	</div>

}
