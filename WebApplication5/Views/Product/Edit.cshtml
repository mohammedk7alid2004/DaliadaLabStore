@model Product
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Product</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 30px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .edit-form-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 30px;
            max-width: 900px;
            margin: 0 auto;
        }

        .page-title {
            color: #343a40;
            font-weight: 600;
            margin-bottom: 25px;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 15px;
        }

        .form-control {
            border-radius: 5px;
            padding: 10px 15px;
            border: 1px solid #ddd;
        }

            .form-control:focus {
                box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
                border-color: #80bdff;
            }

        .form-label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 8px;
        }

        .action-buttons {
            margin-top: 30px;
            display: flex;
            gap: 15px;
        }

        .btn-save {
            background-color: #0d6efd;
            color: white;
            padding: 10px 25px;
            border: none;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-save:hover {
                background-color: #0b5ed7;
                transform: translateY(-2px);
            }

        .btn-cancel {
            background-color: #f8f9fa;
            color: #6c757d;
            border: 1px solid #6c757d;
            padding: 10px 25px;
            border-radius: 5px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-cancel:hover {
                background-color: #e9ecef;
            }
    </style>
</head>
<body>
    <div class="edit-form-container">
        <h2 class="page-title">
            <i class="bi bi-pencil-square"></i> Edit Product
        </h2>

        <form method="post" action="/Product/SaveEdit/@Model.Id">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <label for="ProductName" class="form-label">Product Name</label>
                        <input type="text" value="@Model.ProductName" id="ProductName" name="ProductName" class="form-control" required />
                    </div>

                    <div class="mb-4">
                        <label for="Price" class="form-label">Price ($)</label>
                        <input type="number" step="0.01" value="@Model.Price" id="Price" name="Price" class="form-control" required />
                    </div>

                    <div class="mb-4">
                        <label for="StockQuantity" class="form-label">Stock Quantity</label>
                        <input type="number" value="@Model.StockQuantity" id="StockQuantity" name="StockQuantity" class="form-control" required />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <label for="BrandId" class="form-label">Brand</label>
                        <input type="number" value="@Model.BrandId" id="BrandId" name="BrandId" class="form-control" required />
                    </div>

                    <div class="mb-4">
                        <label for="Cover" class="form-label">Cover Image URL</label>
                        <input type="text" value="@Model.Cover" id="Cover" name="Cover" class="form-control" />
                        @if (!string.IsNullOrEmpty(Model.Cover))
                        {
                            <div class="mt-2">
                                <img src="@Model.Cover" alt="Product Image" class="img-thumbnail" style="max-height: 100px;" />
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="mb-4">
                <label for="Description" class="form-label">Description</label>
                <textarea id="Description" name="Description" class="form-control" rows="4">@Model.Description</textarea>
            </div>

            <div class="action-buttons">
                <a href="/Product" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn-save">Save Changes</button>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>