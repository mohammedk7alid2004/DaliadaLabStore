@using WebApplication4.ViewModels
@model UpdateForm

@{
	ViewData["title"] = "EditProduct";
}
<h5>
	<i class="bi bi-plus-circle-dotted"></i>
	Edit
</h5>
<form asp-controller="Product" enctype="multipart/form-data">
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="ProductName" class="form-label mt-4"></label>
				<input type="text" class="form-control" asp-for="ProductName" placeholder="ProductName">
				<span asp-validation-for="ProductName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="BrandId" class="form-label mt-4"></label>
				<select class="form-select" asp-for="BrandId" asp-items="Model.Brands">
					<option value="">select Brand </option>
				</select>
				<span asp-validation-for="BrandId" class="text-danger"></span>

			</div>
			<div class="form-group">
				<label asp-for="Price" class="form-label mt-4"></label>
				<textarea asp-for="Price" class="form-control" placeholder="price"></textarea>
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="form-label mt-4"></label>
				<textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Cover" class="form-label mt-4"></label>
				<input type="file" class="form-control" asp-for="Cover" data-rule-extension="jpg,png,jpeg">
				<small class="form-text  text-muted">only jpg,png,jpeg allowed with 1m</small>
				<span asp-validation-for="Cover" class="text-danger d-block"></span>
			</div>
			<button type="submit" class="btn btn-light text-black mt-4">Save</button>
		</div>
		<div class="col-md-6">
			<img src="@($"/asset/images/{Model.CurrentCover}")" class="cover-pre  d-flex justify-content-center pt-4 overflow-hidden  " alt="Cover" />
		</div>
	</div>improve layout
</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/product-from.js" asp-append-version="true"></script>
}