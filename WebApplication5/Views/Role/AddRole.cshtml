@model WebApplication4.ViewModels.RolesViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Role</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 40px 0;
        }

        .role-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .role-card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 30px;
            margin-bottom: 20px;
        }

        .page-title {
            color: #212529;
            font-weight: 600;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .form-control {
            border-radius: 5px;
            padding: 12px 15px;
            border: 1px solid #ced4da;
        }

            .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
            }

        .form-label {
            font-weight: 500;
            color: #495057;
            margin-bottom: 8px;
        }

        .btn-submit {
            background-color: #0d6efd;
            border: none;
            color: white;
            padding: 12px 20px;
            border-radius: 5px;
            font-weight: 500;
            margin-top: 15px;
            transition: all 0.3s;
        }

            .btn-submit:hover {
                background-color: #0b5ed7;
                transform: translateY(-2px);
            }

        .btn-back {
            display: inline-block;
            color: #6c757d;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 5px;
            transition: all 0.3s;
        }

            .btn-back:hover {
                background-color: #f1f3f5;
                color: #495057;
            }

        .validation-summary {
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            color: #721c24;
        }
    </style>
</head>
<body>
    <div class="role-container">
        <div class="role-card">
            <h2 class="page-title">
                <i class="bi bi-shield-lock"></i> Add New Role
            </h2>

            <form asp-action="SaveRole">
                @if (ViewContext.ModelState.ErrorCount > 0)
                {
                    <div class="validation-summary mb-4">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                }

                <div class="mb-4">
                    <label asp-for="Name" class="form-label">Role Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter role name" />
                    <span asp-validation-for="Name" class="text-danger d-block mt-2"></span>
                    <small class="text-muted">Role names must be unique and descriptive (e.g. Admin, Editor, User)</small>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn-back">
                        <i class="bi bi-arrow-left me-2"></i> Back to Roles
                    </a>
                    <button type="submit" class="btn-submit">
                        <i class="bi bi-plus-circle me-2"></i> Add Role
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>